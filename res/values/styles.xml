    <!-- ForceOverflow is removed from the latest ActionBarSherlock. How to migrate?
    Probably should just learn how to use ABS and then apply the knowledge here -->
    <!-- No Theme.Sherlock.Dark? -->
    <style name="DarkTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!-- no longer exists?
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.TitlePageIndicator</item>
        -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <!-- no longer exists?
        <item name="vpiTabTextStyle">@style/Widget.TabPageIndicator.Text_Dark</item>
        -->
        <item name="textColorPrimary">@color/textview_colors_dark</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="actionBarStyle">@style/ActionBar.Dark</item>
    </style>

    <style name="LightTheme" parent="Theme.Sherlock.Light.DarkActionBar">
