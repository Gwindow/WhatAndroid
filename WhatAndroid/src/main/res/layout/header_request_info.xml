<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/art_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:contentDescription="@string/header_image"
                    android:scaleType="centerCrop"/>

            <ProgressBar
                    android:id="@+id/loading_indicator"
                    style="@android:style/Widget.Holo.ProgressBar.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="#444">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_dark"/>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="4dp">

            <TextView
                    android:id="@+id/created_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/created"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/created_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/record_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/created_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/record_label"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/record_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/record_label_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/catalogue_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_label_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/catalogue_number"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/catalogue_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/catalogue_number_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/release_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/catalogue_number_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/release_type"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/release_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/release_type_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/votes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/release_type_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/votes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/votes_text"
                    android:paddingRight="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>


            <TextView
                    android:id="@+id/bounty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/votes_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/bounty"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/bounty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/bounty_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/primary_text_dark"/>

            <Button
                    android:id="@+id/add_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/bounty_text"
                    android:layout_marginTop="4dp"
                    android:text="@string/vote"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/filled_torrent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bounty_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/filled"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/filled_torrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/filled_torrent_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_dark"/>

            <TextView
                    android:id="@+id/filled_user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/filled_torrent_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="12dp"
                    android:text="@string/filled_by"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/primary_text_dark"/>

            <TextView
                    android:id="@+id/filled_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/filled_user_text"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_dark"/>

        </RelativeLayout>

        <!-- Header & listing for acceptable bitrates -->
        <RelativeLayout
                android:id="@+id/accept_bitrates_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">

            <TextView
                    android:id="@+id/accept_bitrates_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/accept_formats"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_dark"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/accept_bitrates_header"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="#222">

                <TextView
                        android:id="@+id/accept_bitrates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="@android:color/primary_text_dark"/>

            </LinearLayout>
        </RelativeLayout>

        <!-- Header & listing for acceptable formats -->
        <RelativeLayout
                android:id="@+id/accept_formats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">

            <TextView
                    android:id="@+id/accept_formats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/accept_formats"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_dark"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/accept_formats_header"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="#222">

                <TextView
                        android:id="@+id/accept_formats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="@android:color/primary_text_dark"/>

            </LinearLayout>
        </RelativeLayout>


        <!-- Header & listing for acceptable media -->
        <RelativeLayout
                android:id="@+id/accept_media_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">

            <TextView
                    android:id="@+id/accept_media_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/accept_formats"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_dark"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/accept_media_header"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="#222">

                <TextView
                        android:id="@+id/accept_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="@android:color/primary_text_dark"/>

            </LinearLayout>
        </RelativeLayout>

        <!-- Header & listing for tags -->
        <RelativeLayout
                android:id="@+id/tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">

            <TextView
                    android:id="@+id/tags_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/accept_formats"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_dark"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tags_header"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="#222">

                <TextView
                        android:id="@+id/tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textColor="@android:color/primary_text_dark"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>